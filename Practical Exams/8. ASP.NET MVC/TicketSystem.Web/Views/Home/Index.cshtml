@model IEnumerable<TicketSystem.Web.ViewModels.TicketViewModel>
@{
    ViewBag.Title = "Ticket system";
}

<h2>@ViewBag.Title</h2>

<div class="row-fluid">
    @for (int i = 0; i < Model.Count(); i++)
    {
        if (i % 3 == 0)
        {
            @:</div>
            @:<br />
            @:<div class="row-fluid">
        }

        var item = Model.ElementAt(i);
        <div class="span4">
            <h3>@item.Title</h3>
            <div>
                <strong>Category:</strong> @item.Category
            </div>
            <div>
                <strong>Author:</strong> @item.Author
            </div>
            <div>
                @item.CommentsCount comment(s)
            </div>
            @Html.ActionLink("More details", "Details", "Tickets", new { id = item.Id }, new { @class = "btn" }) 
        </div>
    }
</div>